#include <pthread.h>
#include <iostream>
#include <unistd.h>
#include <stdio.h>

using namespace std;
int sum = 0;
int N;


void* func1(void * argFl){
    int *fl1 = (int*)argFl;
    cout << "введите N:"<< " ";
    cin>> N;
    while(N != -1){
        sum+=1;
        sleep (2);
        N--;
    }
    *fl1 =1;
    cout << "cумма" << sum;
    int* exitCode1 = new int(1);
    pthread_exit(exitCode1);
}


int main(){
    pthread_t thread1;
    int flag1 = 0;
    pthread_create (&thread1 , NULL , func1 , (void*)&flag1);
    sleep(1);
    cout << endl;
    
    flag1 = 1;

    int* exitCode1;


    pthread_join(thread1,(void**)&exitCode1);


    delete(exitCode1);

}
