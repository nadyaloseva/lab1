#include <pthread.h>
#include <iostream>
#include <unistd.h>
#include <stdio.h>

using namespace std;

void* func1(void * argFl){
    int *fl1 = (int*)argFl;
    while( *fl1 == 0 ){
        cout << "1" << flush;
        sleep (2);
    }
    int* exitCode1 = new int(1);
    pthread_exit(exitCode1);
}


int main(){
    pthread_t thread1;
    int flag1 = 0;

    cout << "введите N:"<< " ";
    int N;
    cin>> N;
    for (int i=0;i < N-1; i++ ){
        pthread_create (&thread1 , NULL , func1 , (void*)&flag1);
        sleep(1);
    }
    flag1 = 1;

    int* exitCode1;


    pthread_join(thread1,(void**)&exitCode1);


    delete(exitCode1);

}

